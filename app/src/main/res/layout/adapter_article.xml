<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_big"
    android:layout_marginBottom="@dimen/margin_big"
    android:layout_marginLeft="@dimen/margin_big"
    android:layout_marginRight="@dimen/margin_big"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <TextView
            android:id="@+id/eTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_bigger"
            android:layout_marginRight="@dimen/margin_bigger"
            android:layout_marginTop="@dimen/margin_std"
            android:maxLines="3"
            android:ellipsize="end"
            style="@style/title"
            tools:text="Title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_bigger"
            android:layout_marginRight="@dimen/margin_bigger"
            android:layout_marginBottom="@dimen/margin_std"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_std"
                style="@style/label"
                android:text="@string/by"/>

            <TextView
                android:id="@+id/eAuthors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_std"
                android:maxLines="1"
                style="@style/subTitle"
                tools:text="Authors"/>

            <TextView
                android:id="@+id/eDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_std"
                tools:text="20/10/2016"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_imageList"
            android:scaleType="centerCrop"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
